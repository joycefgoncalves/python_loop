#task 1

import random

# List of moods
moods = ["Happy", "Sad", "Energetic", "Calm", "Tired", "Excited"]

# Days of the week
days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]

# Times of the day
times_of_day = ["morning", "afternoon", "evening"]

# Nested loops to track mood
for day in days:
    for time in times_of_day:
        # Randomly select a mood
        selected_mood = random.choice(moods)
        # Print the mood for the current day and time
        print(f"On {day} {time} you were {selected_mood}.")


