#task 1

# Our playlist of genres
genres = ['Jazz', 'Rock', 'Hip-hop', 'Classical']

# Loop through the genres list
for index, genre in enumerate(genres, start=1):
    # Print the track number and genre with a custom message
    print(f"Track {index}: {genre} is playing.")


#task 2

# Our playlist of genres
genres = ['Jazz', 'Rock', 'Hip-hop', 'Classical']

# Initialize variables
index = 1
playing = True

# Loop until Hip-hop is played
while playing and index <= len(genres):
    # Get the current genre
    genre = genres[index - 1]
    
    # Print the track number and genre with a custom message
    print(f"Track {index}: {genre} is playing.")
    
    # Check if the current genre is Hip-hop
    if genre == 'Hip-hop':
        playing = False
    
    # Increment the index
    index += 1



#task 3

# Our playlist of genres
genres = ['Jazz', 'Rock', 'Hip-hop', 'Classical']

# Loop through the genres list by index
for index in range(len(genres)):
    # Get the current genre
    genre = genres[index]
    
    # Check if the genre is not suitable for the light show
    if genre == 'Classical':
        # Skip this genre
        continue
    
    # Print the track number and a message that the light show is ready
    print(f"Track {index+1}: Get ready for a light show with {genre}.")


